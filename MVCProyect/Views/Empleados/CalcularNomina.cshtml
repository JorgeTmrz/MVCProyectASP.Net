
@{
    ViewBag.Title = "CalcularNomina";
}
    <div class="container">
        <legend class="m-4">Calcular nomina de empleados</legend>
        <p>Por favor introduce el año y mes a partir del los cuales se generara la nomina</p>

        <form class="form" method="post" action="generate">
            <div class="form-group">
                <input placeholder="Año" required type="number" class="form-control" autofocus name="year" id="year" />
            </div>
            <div class="form-group">
                <select placeholder="Año" type="number" class="form-control" name="mes" id="mes">
                    <option value=1>Enero</option>
                    <option value=2>Febrero</option>
                    <option value=3>Marzo</option>
                    <option value=4>Abril</option>
                    <option value=5>Mayo</option>
                    <option value=6>Junio</option>
                    <option value=7>Julio</option>
                    <option value=8>Agosto</option>
                    <option value=9>Septiembre</option>
                    <option value=10>Octubre</option>
                    <option value=11>Noviembre</option>
                    <option value=12>Diciembre</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-success btn-block" value="generate">
                    Generar Nomina
                </button>
            </div>
        </form>
    </div>


