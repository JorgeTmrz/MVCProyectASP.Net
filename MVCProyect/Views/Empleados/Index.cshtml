@model IEnumerable<MVCMeTieneJarto.Models.Empleados>

@{
    ViewBag.Title = "Index";
}

<h2 class="m-4">Lista de empleados</h2>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_ingreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargos.Cargo)
            </th>
            <th>
                Departamento
            </th>
            <th></th>
        </tr>
    </thead>
    

@foreach (var item in Model) {
<tbody>
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Apellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cedula)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_ingreso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cargos.Cargo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamentos.Nombre)
        </td>
        <td>
            @Html.ActionLink("✏️", "Edit", new { id = item.ID }) 
            @Html.ActionLink("🔍", "Details", new { id = item.ID }) 
            @Html.ActionLink("🗑", "Delete", new { id = item.ID })
        </td>
    </tr>
</tbody>
}

</table>

<p>
    @Html.ActionLink("Crear nuevo", "Create", "", new { @class = "btn btn-info btn-block" })
</p>
